<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#616161"
                android:endColor="#757575"
                android:startColor="#424242" />
            <size
                android:width="11dp"
                android:height="11dp" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item
                    android:bottom="1dp"
                    android:left="1dp"
                    android:right="1dp"
                    android:top="1dp">
                    <shape>
                        <gradient
                            android:angle="-90"
                            android:centerColor="#f0a100"
                            android:endColor="#6b441d"
                            android:startColor="#f0a100" />
                        <corners android:radius="4dp" />
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>